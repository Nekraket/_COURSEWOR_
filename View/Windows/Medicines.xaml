<Window x:Class="Курсовая.View.Windows.Medicines"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Лекарства" Height="1080" Width="1920" MinHeight="540" MinWidth="1220"
        WindowState="Maximized">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Button Style="{StaticResource BtnReturnstyle}" Content="Добавление лекарства" Click="BtnReturn_Click" x:Name="BtnReturn"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" Margin="70,0,0,0" x:Name="InputStackPanel">
            <TextBlock Text="Какое лекарство вы хотите добавить в лечение?" Margin="0,0,0,15" Style="{StaticResource TextUp}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Left">
                    <StackPanel Orientation="Vertical">
                        <TextBox Text="Введите название лекарства" Style="{StaticResource RoundedTextBoxStyle}" Name="BoxNameMed" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Width="380"/>
                        <TextBox Text="От/Для чего лекарство: Например, от головной боли" Style="{StaticResource RoundedTextBoxStyle}" Name="BoxForMed" Margin="0,10,0,0" Foreground="Gray"
                                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Width="380"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="140,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource PreviewIconBorderStyle}" Name="MainBorder">
                    <Grid>
                        <Ellipse Width="80" Height="80" Fill="White"/>
                        <Path x:Name="PreviewIconPath" Width="45" Height="45" Stretch="Uniform" Fill="#9A00D7" Data="{Binding SelectedIconPath}"/>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="2" Margin="70,0,0,0" x:Name="IconsStackPanel">
            <Border Style="{StaticResource BackInterface}" Padding="25" Margin="0,0,0,10" x:Name="SettingsBorder" MaxWidth="1120">
                <StackPanel Orientation="Vertical" x:Name="SettingsStackPanel">

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding IconDataMap}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource IconContainerStyle}">
                                        <Border Style="{StaticResource IconBorderStyle}" MouseDown="Icon_MouseDown" Tag="{Binding Key}">
                                            <Path Width="40" Height="40" Stretch="Uniform" Fill="Black" Data="{Binding Value}"/>
                                        </Border>
                                        <TextBlock Text="{Binding Key}" Style="{StaticResource IconLabelTextStyle}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>

                    <Rectangle Style="{StaticResource HorizontalSeparator}" Fill="Black" Margin="0,10,0,10"/>

                    <TextBlock Text="Выберите цвет иконки" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>

                    <Border Margin="0,0,0,10">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding AvailableColors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ColorItemStyle}" Tag="{Binding}" MouseDown="Color_MouseDown" Background="Transparent">
                                            <Border Style="{StaticResource ColorSquareStyle}" Background="{Binding Color}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <Border Background="White" Style="{StaticResource BackInterface}" Padding="20" Margin="0,0,30,0">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource UploadButtonStyle}" Content="Загрузить фото" Click="UploadButton_Click" HorizontalAlignment="Left" Margin="0,0,10,0"/>
                                <Button x:Name="CancelPhotoButton" Style="{StaticResource BtnActive2style}" Content="Отменить" Click="CancelPhotoButton_Click" HorizontalAlignment="Left" Visibility="Collapsed"/>
                            </StackPanel>
                            <Border x:Name="LargePreviewBorder" Width="1000" Height="400" Margin="0,10,0,0" Cursor="Hand" MouseDown="LargePreview_MouseDown">
                                <Image x:Name="LargePreviewImage" Stretch="Uniform" Source="/Sourse/Images/Default_Image.png"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Margin="50 0 50 0">
            <StackPanel>
                <Border Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{Binding FrequencyHeaderText}" Style="{StaticResource ExpanderStyle}" Margin="0 0 0 12">
                            <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                <TextBlock Text="Выберите периодичность:" Style="{StaticResource TextDouwn}" Margin="0 0 0 10"/>
                                <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                    <RadioButton x:Name="DailyRadio" Content="Каждый день" GroupName="Frequency" Checked="FrequencyRadio_Checked" Tag="daily" IsChecked="True"/>
                                    <RadioButton x:Name="WeeklyRadio" Content="Каждую неделю" GroupName="Frequency" Checked="FrequencyRadio_Checked" Tag="weekly" Margin="0,5,0,0"/>
                                    <RadioButton x:Name="MonthlyRadio" Content="Каждый месяц" GroupName="Frequency" Checked="FrequencyRadio_Checked" Tag="monthly" Margin="0,5,0,0"/>
                                    <RadioButton x:Name="CustomRadio" Content="Пользовательская" GroupName="Frequency" Checked="FrequencyRadio_Checked" Tag="custom" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel x:Name="CustomFrequencyPanel" Orientation="Horizontal" Margin="0 10 0 0" Visibility="Collapsed">
                                    <TextBlock Text="Раз в" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox x:Name="CustomDaysTextBox" Text="1" Width="60" Style="{StaticResource RoundedTextBoxStyle}" PreviewTextInput="NumberValidationTextBox" TextChanged="CustomDaysTextBox_TextChanged"/>
                                    <TextBlock Text="дней" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <Expander Header="{Binding TimesPerDayHeaderText}" Style="{StaticResource ExpanderStyle}" Margin="0 0 0 12">
                            <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                <TextBlock Text="Выберите количество приемов:" Style="{StaticResource TextDouwn}" Margin="0 0 0 10"/>
                                <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                    <RadioButton x:Name="OncePerDay" Content="1 раз в день" GroupName="TimesPerDay" IsChecked="True" Checked="TimesPerDayRadio_Checked"/>
                                    <RadioButton x:Name="TwicePerDay" Content="2 раза в день" GroupName="TimesPerDay" Margin="0,5,0,0" Checked="TimesPerDayRadio_Checked"/>
                                    <RadioButton x:Name="ThreeTimesPerDay" Content="3 раза в день" GroupName="TimesPerDay" Margin="0,5,0,0" Checked="TimesPerDayRadio_Checked"/>
                                    <RadioButton x:Name="FourTimesPerDay" Content="4 раза в день" GroupName="TimesPerDay" Margin="0,5,0,0" Checked="TimesPerDayRadio_Checked"/>
                                    <RadioButton x:Name="AsNeeded" Content="По необходимости" GroupName="TimesPerDay" Margin="0,5,0,0" Checked="TimesPerDayRadio_Checked"/>
                                </StackPanel>
                                <StackPanel x:Name="TimeSelectionPanel" Margin="0 15 0 0" Visibility="Visible">
                                    <TextBlock Text="Выберите время уведомлений:" Style="{StaticResource TextDouwn}" Margin="0 0 0 10"/>
                                    <StackPanel x:Name="TimeInputsPanel" Orientation="Vertical"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <Expander Header="{Binding DosageHeaderText}" Style="{StaticResource ExpanderStyle}">
                            <Grid Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Количество" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>
                                    <TextBox x:Name="DosageTextBox" Text="1" Style="{StaticResource RoundedTextBoxStyle}" PreviewTextInput="NumberValidationTextBox" TextChanged="DosageTextBox_TextChanged"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Способ приема" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>
                                    <StackPanel Orientation="Vertical" Margin="0 5 0 0">
                                        <RadioButton x:Name="BeforeMeal" Content="Перед едой" GroupName="IntakeMethod" IsChecked="True" Checked="IntakeMethodRadio_Checked"/>
                                        <RadioButton x:Name="AfterMeal" Content="После еды" GroupName="IntakeMethod" Margin="0,3,0,0" Checked="IntakeMethodRadio_Checked"/>
                                        <RadioButton x:Name="DuringMeal" Content="Во время еды" GroupName="IntakeMethod" Margin="0,3,0,0" Checked="IntakeMethodRadio_Checked"/>
                                        <RadioButton x:Name="NoMatter" Content="Не важно" GroupName="IntakeMethod" Margin="0,3,0,0" Checked="IntakeMethodRadio_Checked"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Expander>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <WrapPanel Orientation="Horizontal">
                            <Expander Header="{Binding StartDateHeaderText}" Style="{StaticResource ExpanderStyle}" Margin="0 0 0 12" Width="275" HorizontalAlignment="Left">
                                <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                    <DatePicker x:Name="StartDatePicker" SelectedDateChanged="StartDatePicker_SelectedDateChanged"/>
                                </StackPanel>
                            </Expander>

                            <Expander Header="{Binding EndDateHeaderText}" Style="{StaticResource ExpanderStyle}" Margin="20 0 0 15" Width="275" HorizontalAlignment="Left">
                                <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                    <DatePicker x:Name="EndDatePicker" SelectedDateChanged="EndDatePicker_SelectedDateChanged"/>
                                    <CheckBox x:Name="NoEndDateCheckBox" Content="Без даты окончания" Margin="0 10 0 0" Checked="NoEndDateCheckBox_Checked" Unchecked="NoEndDateCheckBox_Unchecked"/>
                                </StackPanel>
                            </Expander>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <Grid Margin="0 0 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Хотите получать напоминания о пополнении вашего запаса?" Style="{StaticResource HeaderTextStyle}" Grid.Column="0" Grid.Row="0"/>
                            <TextBlock Text="Получать напоминания" Style="{StaticResource TextDouwn}" Grid.Row="1" Grid.Column="0"/>
                            <ToggleButton x:Name="StockRemindersToggle" Grid.Row="1" Style="{StaticResource ModernToggleStyle}" Checked="StockRemindersToggle_Changed" Unchecked="StockRemindersToggle_Changed"/>
                        </Grid>

                        <TextBlock Text="Текущие запасы" Style="{StaticResource HeaderTextStyle}" Margin="0 4 0 5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Количество" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>
                                <TextBox x:Name="CurrentStockTextBox" Text="0" Style="{StaticResource RoundedTextBoxStyle}" PreviewTextInput="NumberValidationTextBox" IsEnabled="{Binding IsChecked, ElementName=StockRemindersToggle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Напомни мне, когда:" Style="{StaticResource HeaderTextStyle}" Margin="0 10 0 5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Осталось" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>
                                <TextBox x:Name="RemindWhenTextBox" Text="0" Style="{StaticResource RoundedTextBoxStyle}" PreviewTextInput="NumberValidationTextBox" IsEnabled="{Binding IsChecked, ElementName=StockRemindersToggle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ед." Style="{StaticResource TextDouwn}" Margin="0 0 0 5" VerticalAlignment="Bottom" Height="30"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Комментарий к лекарству" Style="{StaticResource HeaderTextStyle}" Margin="0 0 0 10"/>
                        <TextBlock Text="Здесь вы можете добавить дополнительную информацию о лекарстве" Style="{StaticResource TextDouwn}" Margin="0 0 0 5" Foreground="Gray"/>

                        <Border Style="{StaticResource BackInterface}" Background="White" Padding="15" Margin="0 10 0 0">
                            <StackPanel Orientation="Vertical">
                                <TextBox x:Name="CommentTextBox"  Style="{StaticResource RoundedTextBoxStyle}" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                         MinHeight="100" MaxHeight="300" TextChanged="CommentTextBox_TextChanged" Foreground="Gray" GotFocus="CommentTextBox_GotFocus" LostFocus="CommentTextBox_LostFocus"/>
                                <TextBlock Text="Максимальная длина: 500 символов" Style="{StaticResource TextDouwn}" FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <Expander Header="Состав лекарства" Style="{StaticResource ExpanderStyle}" Margin="0 0 0 12">
                            <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                <TextBlock Text="Добавьте компоненты лекарства:" Style="{StaticResource TextDouwn}" Margin="0 0 0 10"/>

                                <Border Style="{StaticResource BackInterface}" Background="White" Padding="15" Margin="0 0 0 10">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel>
                                            <TextBlock Text="Название компонента:" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>
                                            <TextBox x:Name="ComponentNameTextBox" Style="{StaticResource RoundedTextBoxStyle}" Width="250" TextChanged="ComponentNameTextBox_TextChanged" ToolTipService.ShowOnDisabled="True"/>
                                        </StackPanel>

                                        <Button x:Name="AddComponentButton" Content="Добавить компонент" Style="{StaticResource BtnActive2style}" Margin="0,10,0,0" HorizontalAlignment="Left" Click="AddComponentButton_Click"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource BackInterface}" Background="White" Padding="10">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Добавленные компоненты:" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>

                                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Height="200" Margin="0,5,0,0">
                                            <ListBox x:Name="CompositionListBox" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="White">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Background="Transparent">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding}" Style="{StaticResource TextDouwn}" VerticalAlignment="Center" Width="350"/>

                                                                <Button Content="X" Style="{StaticResource BtnActive2style}" Tag="{Binding}" Click="RemoveComponentButton_Click" FontSize="12" Width="30" Height="30" Margin="20,0,0,0" Padding="0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>

                                        <TextBlock Text="Для удаления компонента нажмите на кнопку X рядом с ним" Style="{StaticResource TextDouwn}" FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource BtnSavestyle}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,50,0" Width="295" Content="Сохранить лекарство" Click="SaveMedicineButton_Click"/>
    </Grid>
</Window>
