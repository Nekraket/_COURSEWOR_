<Window x:Class="Курсовая.View.Windows.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая.View.Windows"
        xmlns:controls="clr-namespace:Курсовая.View.UserControls"
        mc:Ignorable="d"
        Title="Главная" Height="1080" Width="1920" MinHeight="600" MinWidth="1100"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Текущие задачи" Style="{StaticResource TextDouwn}" VerticalAlignment="Center" Grid.Column="0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Cursor="">
                <Button Content="Личный лекарственный справочник 💊" Style="{StaticResource HomeButtonStyle}" Click="PersonalMedArchiveCard_Click" Width="240"/>
                <Button Content="Рецепты 📝" Style="{StaticResource HomeButtonStyle}" Click="BtnRecipe_Click"/>
                <Button Content="Аллергии ⚠" Style="{StaticResource HomeButtonStyle}" Click="AllergiesButton_Click"/>
                <Button Content="Календарь 🗓" Style="{StaticResource HomeButtonStyle}" Click="BtnCalendar_Click"/>

                <Button Content="Настройки ⚙" Style="{StaticResource BtnActive2style}" Click="BtnSettings_Click" Margin="0" Height="25" Width="110" Padding="0"/>
            </StackPanel>

            <Rectangle Grid.ColumnSpan="3" Style="{StaticResource HorizontalSeparator}" VerticalAlignment="Bottom" Margin="0 40 0 0"/>
        </Grid>

        <ScrollViewer Grid.Column="0" Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="900">
            <StackPanel>
                <GroupBox Header="Лекарства" Padding="10" Margin="10">
                    <Grid>
                        <Border Background="#A6A6A6" CornerRadius="15" HorizontalAlignment="Stretch" VerticalAlignment="Top" Padding="10">
                            <Grid>
                                <ScrollViewer VerticalScrollBarVisibility="Hidden" Name="MedicinesScrollViewer">
                                    <StackPanel Name="MedicinesStackPanel" Orientation="Vertical">
                                        <TextBlock Text="Нет активных напоминаний о лекарствах" HorizontalAlignment="Center" Margin="10" Foreground="White"/>
                                    </StackPanel>
                                </ScrollViewer>
                                <Path Data="M12,5 L12,19 M5,12 L19,12" Style="{StaticResource SelectionAnimation}" MouseDown="MedicinesCard_MouseDown"/>
                            </Grid>
                        </Border>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Измерения" Padding="10" Margin="10">
                    <Grid>
                        <Border Background="#A6A6A6" CornerRadius="15" HorizontalAlignment="Stretch" VerticalAlignment="Top" Padding="10">
                            <Grid>
                                <ScrollViewer VerticalScrollBarVisibility="Hidden" Name="MeasurementsScrollViewer">
                                    <StackPanel Name="MeasurementsStackPanel" Orientation="Vertical">
                                        <TextBlock Text="Нет активных напоминаний о измерениях" HorizontalAlignment="Center" Margin="10" Foreground="White"/>
                                    </StackPanel>
                                </ScrollViewer>
                                <Path Data="M12,5 L12,19 M5,12 L19,12" Style="{StaticResource SelectionAnimation}" MouseDown="MeasurementsCard_MouseDown"/>
                            </Grid>
                        </Border>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Настроение и симптомы" Padding="10" Margin="10">
                    <Grid>
                        <Border Background="#A6A6A6" CornerRadius="15" HorizontalAlignment="Stretch" VerticalAlignment="Top" Padding="10">
                            <Grid>
                                <ScrollViewer VerticalScrollBarVisibility="Hidden" Name="MoodScrollViewer">
                                    <StackPanel Name="MoodStackPanel" Orientation="Vertical">
                                        <TextBlock Text="Нет активных напоминаний о симптомах" HorizontalAlignment="Center" Margin="10"  Foreground="White"/>
                                    </StackPanel>
                                </ScrollViewer>
                                <Path Data="M12,5 L12,19 M5,12 L19,12" Style="{StaticResource SelectionAnimation}" MouseDown="MoodCard_MouseDown"/>
                            </Grid>
                        </Border>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Column="1" Grid.Row="1" BorderBrush="#D9D9D9" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Информация о позиции" Style="{StaticResource TextDouwn}" Margin="15"/>
                    <Rectangle Style="{StaticResource HorizontalSeparator}"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <StackPanel Name="DetailsStackPanel" VerticalAlignment="Top" Margin="15">
                            <TextBlock Text="Здесь будет информация о выбранной позиции" HorizontalAlignment="Center" Foreground="#666666"/>
                        </StackPanel>

                        <Frame x:Name="DetailsFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <GridSplitter Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" ShowsPreview="False" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#D9D9D9"/>

        <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
            <TextBlock Text="Решенные задачи" Style="{StaticResource TextDouwn}" Margin="15"/>
            <Rectangle Style="{StaticResource HorizontalSeparator}"/>

            <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto" Height="200">
                <StackPanel Name="CompletedTasksStackPanel" Margin="15">
                    <TextBlock Text="Нет завершенных задач" HorizontalAlignment="Center" Foreground="#666666"/>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>