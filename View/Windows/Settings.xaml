<Window x:Class="Курсовая.View.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Курсовая.View.UserControls"
        Title="Настройки" Height="1080" Width="1920" WindowState="Maximized" MinHeight="830" MinWidth="1150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button Style="{StaticResource BtnReturnstyle}" Content="Настройки" Click="BtnReturn_Click"/>
        </StackPanel>

        <Border Style="{StaticResource BackInterface}" Height="120" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Margin="0,0,0,25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="Transparent" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,40,0">
                    <Canvas Width="75" Height="75">
                        <Border Background="White" CornerRadius="37.5" Width="75" Height="75">
                            <Image x:Name="AvatarPreviewImage" Width="70" Height="70" Stretch="UniformToFill">
                                <Image.Clip>
                                    <EllipseGeometry RadiusX="35" RadiusY="35" Center="35,35"/>
                                </Image.Clip>
                            </Image>
                        </Border>

                        <Button x:Name="BtnChangeAvatar" Content="✏️" Height="30" Width="30" FontSize="16" Canvas.Left="45" Canvas.Top="45" Style="{StaticResource CircleButtonStyle}" Click="BtnChangeAvatar_Click"/>
                    </Canvas>
                </Border>

                <StackPanel Grid.Column="1" Margin="25,15,15,5">
                    <TextBlock x:Name="GreetingText" Text="Привет, Пользователь!" Style="{StaticResource TextUp}" Margin="0,0,0,15"/>
                    <TextBlock Text="Здесь вы можете изменить данные своего профиля" Style="{StaticResource TextDouwn}"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Grid.Column="1" Width="500" HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical" Margin="0,0,100,0">
                <TextBlock Text="Ваш логин" Style="{StaticResource HeaderTextStyle}"/>
                <TextBox x:Name="UserNameTextBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                <TextBlock Text="Ваш email" Style="{StaticResource HeaderTextStyle}"/>
                <TextBox x:Name="UserEmailTextBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                <TextBlock Text="Дата рождения" Style="{StaticResource HeaderTextStyle}"/>
                <DatePicker x:Name="BirthDatePicker" Background="White" BorderThickness="0" Padding="10"/>

                <TextBlock Text="Пол" Style="{StaticResource HeaderTextStyle}"/>
                <Expander x:Name="SexExpander" Style="{StaticResource ExpanderStyle}" Header="{Binding SelectedSexText}">
                    <ListBox x:Name="SexListBox" MaxHeight="150" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0" SelectionChanged="SexListBox_SelectionChanged" ItemsSource="{Binding Genders}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem"/>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Style="{StaticResource ListBoxTextBlockStyle}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander>
            </StackPanel>

            <Button Style="{StaticResource BtnSavestyle}" Margin="0,40,160,0" Content="Сохранить изменения" Click="BtnSave_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Margin="20,0,0,0">
            <Button Style="{StaticResource BtnActive3style}" Content="Добавить получателя ухода" HorizontalAlignment="Left" Click="AddRecipient_Click"/>
            <TextBlock Text="Получатели моей помощи:" FontSize="35" Margin="0,25,0,15" FontWeight="Medium"/>

            <ScrollViewer Height="650">
                <ItemsControl x:Name="RecipientsItemsControl" ItemsSource="{Binding Recipients}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:RecipientCard DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <WrapPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,160,40">
            <Button Style="{StaticResource BtnActivestyle}" Width="200" Content="Выйти из профиля" Click="BtnExitProfile_Click" Margin="0,0,40,0"/>
            <Button Style="{StaticResource BtnActive2style}" Width="200" Content="Удалить профиль" Click="BtnDeleteProfile_Click"/>
        </WrapPanel>
    </Grid>
</Window>