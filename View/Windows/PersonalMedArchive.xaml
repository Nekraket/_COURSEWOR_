<Window x:Class="Курсовая.View.Windows.PersonalMedArchive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая.View.Windows"
        xmlns:controls="clr-namespace:Курсовая.View.UserControls"
        mc:Ignorable="d"
        Title="Персональный медицинский архив" Height="1080" Width="1920" MinHeight="500" MinWidth="850"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="BtnReturn" Style="{StaticResource BtnReturnstyle}" Content="Назад" Click="BtnReturn_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Column="0" Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="CategoriesPanel"/> 
        </ScrollViewer>

        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" BorderBrush="#D9D9D9" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Подробности" Style="{StaticResource TextDouwn}" Margin="15"/>
                    <Rectangle Style="{StaticResource HorizontalSeparator}"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailsStackPanel" VerticalAlignment="Top">
                        <TextBlock Text="Выберите запись для просмотра деталей" Margin="15" HorizontalAlignment="Center" Foreground="#666666" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </ScrollViewer>

                <WrapPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                    <Button x:Name="ChangeRecipientButton" Content="Изменить получателя" Style="{StaticResource BtnActivestyle}" Margin="5" Click="ChangeRecipientButton_Click" Visibility="Collapsed"/>
                    <Button x:Name="DeleteButton" Content="Удалить" Style="{StaticResource BtnActive2style}" Margin="5" Click="DeleteButton_Click" Visibility="Collapsed"/>
                </WrapPanel>
            </Grid>
        </Border>
    </Grid>
</Window>