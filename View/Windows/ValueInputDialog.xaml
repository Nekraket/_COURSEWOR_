<Window x:Class="Курсовая.View.Windows.ValueInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод значения"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock x:Name="TitleText" Text="Ввод значения" Style="{StaticResource TextUp}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,20">
            <TextBlock x:Name="DescriptionText" Text="Пожалуйста, введите значение:" FontSize="14" Foreground="#666666" Margin="0,0,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="ValueTextBox" Grid.Column="0" Style="{StaticResource RoundedTextBoxStyle}" TextChanged="ValueTextBox_TextChanged"/>

                <TextBlock x:Name="UnitText" Grid.Column="1" Text="ед." FontSize="14" Foreground="#888888" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>

            <TextBlock x:Name="HintText" Text="Введите числовое значение" FontSize="12" Foreground="#999999" FontStyle="Italic" Margin="5,5,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
            <Button x:Name="BtnCancel" Content="Отмена" Width="100" Height="40" Style="{StaticResource BtnActive2style}" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button x:Name="BtnOK" Content="ОК" Width="100" Height="40" Style="{StaticResource BtnSavestyle}" IsEnabled="False" Click="BtnOK_Click" />
        </StackPanel>
    </Grid>
</Window>