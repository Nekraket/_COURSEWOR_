<Window x:Class="Курсовая.View.Windows.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая.View.Windows" 
        xmlns:controls="clr-namespace:Курсовая.View.UserControls"
        mc:Ignorable="d"
        Title="Начало" Height="1080" Width="1920" MinWidth="1200" MinHeight="400"
        WindowState="Maximized">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,20,0,20">
            <TextBlock Style="{StaticResource TextUPUP}">
                <Run Text="Здравствуйте, "/>
                <Run Name="BoxUserLogin"/>
                <Run Text="!!"/>
            </TextBlock>
            <TextBlock Text="Давайте наладим вашу рутину!" Style="{StaticResource TextUPUP}" Margin="0,0,0,10"/>
            <TextBlock Text="Начните с добавления любой из категорий" Style="{StaticResource TextDouwn}" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Width="600" HorizontalAlignment="Center" Margin="0,20">
                <controls:StartNavigation
                    TitleText="Лекарства"
                    DescriptionText="Добавьте лекарства в свой план лечения, чтобы получать напоминания и отслеживать их приём"
                    ImageSource="/Sourse/Images/Medicines_Image.png"
                    MouseDown="MedicinesCard_MouseDown"/>

                <controls:StartNavigation 
                    TitleText="Измерения"
                    DescriptionText="Настройте напоминания для регистрации данных о состоянии здоровья, таких как артериальное давление, вес или уровень сахара в крови."
                    ImageSource="/Sourse/Images/Measurements_Image.png"
                    MouseDown="MeasurementsCard_MouseDown"/>
                
                <controls:StartNavigation 
                    TitleText="Личный лекарственный справочник"
                    DescriptionText="Ваш личный архив эффективных средств. Сохраняйте названия лекарств, мазей и других средств, которые вы проверили на себе, и привязывайте их к конкретным симптомам."
                    ImageSource="/Sourse/Images/PersonalArchive_Image.png"
                    MouseDown="PersonalMedArchiveCard_MouseDown"/>

                <controls:StartNavigation 
                    TitleText="Настроение и симптомы"
                    DescriptionText="Установите напоминания, чтобы проверять свое настроение и регистрировать любые симптомы, которые вы испытываете."
                    ImageSource="/Sourse/Images/Mood_Image.png"
                    MouseDown="MoodCard_MouseDown"/>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource BtnSavestyle}" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="85,0,85,60" Click="SaveButton_Click"/>
    </Grid>
</Window>
