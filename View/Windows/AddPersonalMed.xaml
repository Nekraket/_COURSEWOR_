<Window x:Class="Курсовая.View.Windows.AddPersonalMed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая.View.Windows"
        mc:Ignorable="d"
        Title="Добавление средства в справочник" Height="1080" Width="1920" MinHeight="540" MinWidth="1220"
        WindowState="Maximized">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Button Style="{StaticResource BtnReturnstyle}" Content="Персональный медицинский архив" Click="BtnReturn_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" Margin="70,0,0,0" x:Name="InputStackPanel">
            <TextBlock Text="{Binding PageTitle}" Margin="0,0,0,15" Style="{StaticResource TextUp}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Left">
                    <StackPanel Orientation="Vertical">
                        <TextBox Text="Введите название средства" Style="{StaticResource RoundedTextBoxStyle}" Name="BoxNameMed" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Width="380"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="140,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource PreviewIconBorderStyle}" Name="MainBorder">
                    <Grid>
                        <Ellipse Width="80" Height="80" Fill="White"/>
                        <Path x:Name="PreviewIconPath" Width="40" Height="40" Stretch="Uniform" Fill="#9A00D7" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="2" Margin="70,0,0,0" x:Name="IconsStackPanel">
            <Border Style="{StaticResource BackInterface}" Padding="25" Margin="0,0,0,10" x:Name="SettingsBorder" MaxWidth="1120">
                <StackPanel Orientation="Vertical" x:Name="SettingsStackPanel">

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding IconDataMap}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource IconContainerStyle}">
                                        <Border Style="{StaticResource IconBorderStyle}" MouseDown="Icon_MouseDown" Tag="{Binding Key}">
                                            <Grid>
                                                <Ellipse Width="50" Height="50" Fill="White"/>
                                                <Path Width="30" Height="30" Stretch="Uniform" Fill="Black" Data="{Binding Value}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <TextBlock Text="{Binding Key}" Style="{StaticResource IconLabelTextStyle}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>

                    <Rectangle Style="{StaticResource HorizontalSeparator}" Fill="Black" Margin="0,10,0,10"/>

                    <TextBlock Text="Выберите цвет иконки" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>

                    <Border Margin="0,0,0,10">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding AvailableColors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ColorItemStyle}" Tag="{Binding}" MouseDown="Color_MouseDown" Background="Transparent">
                                            <Border Style="{StaticResource ColorSquareStyle}" Background="{Binding Color}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <Border Background="White" Style="{StaticResource BackInterface}" Padding="20" Margin="0,0,30,0">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource UploadButtonStyle}" Content="Загрузить фото" Click="UploadButton_Click" HorizontalAlignment="Left" Margin="0,0,10,0"/>
                                <Button x:Name="CancelPhotoButton" Style="{StaticResource BtnActive2style}" Content="Отменить" Click="CancelPhotoButton_Click" HorizontalAlignment="Left" Visibility="Collapsed"/>
                            </StackPanel>
                            <Border x:Name="LargePreviewBorder" Width="1000" Height="400" Margin="0,10,0,0" Cursor="Hand" MouseDown="LargePreview_MouseDown">
                                <Image x:Name="LargePreviewImage" Stretch="Uniform" Source="/Sourse/Images/Default_Image.png"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Margin="50 0 50 0">
            <StackPanel>
                <Border Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <Expander Header="Сколько раз в день" Style="{StaticResource ExpanderStyle}" Margin="0 0 0 12">
                            <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                <TextBlock Text="Выберите количество приемов:" Style="{StaticResource TextDouwn}" Margin="0 0 0 10"/>
                                <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                    <RadioButton x:Name="OncePerDay" Content="1 раз в день" GroupName="TimesPerDay" IsChecked="True"/>
                                    <RadioButton x:Name="TwicePerDay" Content="2 раза в день" GroupName="TimesPerDay" Margin="0,5,0,0"/>
                                    <RadioButton x:Name="ThreeTimesPerDay" Content="3 раза в день" GroupName="TimesPerDay" Margin="0,5,0,0"/>
                                    <RadioButton x:Name="FourTimesPerDay" Content="4 раза в день" GroupName="TimesPerDay" Margin="0,5,0,0"/>
                                    <RadioButton x:Name="AsNeeded" Content="По необходимости" GroupName="TimesPerDay" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel x:Name="TimeSelectionPanel" Margin="0 15 0 0" Visibility="Visible">
                                    <TextBlock Text="Выберите время уведомлений:" Style="{StaticResource TextDouwn}" Margin="0 0 0 10"/>
                                    <StackPanel x:Name="TimeInputsPanel" Orientation="Vertical"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <Expander Header="Дозировка" Style="{StaticResource ExpanderStyle}">
                            <Grid Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Количество" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>
                                    <TextBox x:Name="DosageTextBox" Text="1" Style="{StaticResource RoundedTextBoxStyle}" PreviewTextInput="NumberValidationTextBox"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Способ приема" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>
                                    <StackPanel Orientation="Vertical" Margin="0 5 0 0">
                                        <RadioButton x:Name="BeforeMeal" Content="Перед едой" GroupName="IntakeMethod" IsChecked="True"/>
                                        <RadioButton x:Name="AfterMeal" Content="После еды" GroupName="IntakeMethod" Margin="0,3,0,0"/>
                                        <RadioButton x:Name="DuringMeal" Content="Во время еды" GroupName="IntakeMethod" Margin="0,3,0,0"/>
                                        <RadioButton x:Name="NoMatter" Content="Не важно" GroupName="IntakeMethod" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Expander>

                        <TextBlock Text="Комментарии и рекомендации" Style="{StaticResource HeaderTextStyle}" Margin="0 20 0 10"/>

                        <TextBox x:Name="CommentsTextBox" Style="{StaticResource RoundedTextBoxStyle}" Text="Добавьте ваши комментарии и рекомендации по применению средства..."
                                 Foreground="Gray" GotFocus="CommentsTextBox_GotFocus" LostFocus="CommentsTextBox_LostFocus" Height="120" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource BackInterface}" Padding="17" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <Expander Header="Состав лекарства" Style="{StaticResource ExpanderStyle}" Margin="0 0 0 12" IsExpanded="True">
                            <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                <TextBlock Text="Добавьте компоненты лекарства:" Style="{StaticResource TextDouwn}" Margin="0 0 0 10"/>

                                <Border Style="{StaticResource BackInterface}" Background="White" Padding="15" Margin="0 0 0 10">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel>
                                            <TextBlock Text="Название компонента:" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>
                                            <TextBox x:Name="ComponentNameTextBox" Style="{StaticResource RoundedTextBoxStyle}" Width="250" TextChanged="ComponentNameTextBox_TextChanged" ToolTipService.ShowOnDisabled="True"/>
                                        </StackPanel>

                                        <Button x:Name="AddComponentButton" Content="Добавить компонент" Style="{StaticResource BtnActive2style}" Margin="0,10,0,0" HorizontalAlignment="Left" Click="AddComponentButton_Click"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource BackInterface}" Background="White" Padding="10">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Добавленные компоненты:" Style="{StaticResource TextDouwn}" Margin="0 0 0 5"/>

                                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Height="200" Margin="0,5,0,0">
                                            <ListBox x:Name="CompositionListBox" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="White">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Background="Transparent">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding}" Style="{StaticResource TextDouwn}" VerticalAlignment="Center" Width="350"/>

                                                                <Button Content="X" Style="{StaticResource BtnActive2style}" FontSize="12" Width="30" Height="30" 
                                                                        Margin="20,0,0,0" Padding="0" Tag="{Binding}" Click="RemoveComponentButton_Click"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>

                                        <TextBlock Text="Для удаления компонента нажмите на кнопку ✕ рядом с ним" Style="{StaticResource TextDouwn}" FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource BtnSavestyle}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,50,0" Width="295" Content="Добавить в справочник" Click="SaveToGuideButton_Click"/>
    </Grid>
</Window>