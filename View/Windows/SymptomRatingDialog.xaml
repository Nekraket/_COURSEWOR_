<Window x:Class="Курсовая.View.Windows.SymptomRatingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оценка симптома"
        Height="400"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock x:Name="TitleText" Text="Оценка симптома" Style="{StaticResource TextUp}"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock x:Name="SymptomNameText" Text="Симптом:" FontSize="14" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,5"/>

                <TextBlock Text="Оценка самочувствия (1-10):" FontSize="14" Foreground="#666666" Margin="0,15,0,10"/>

                <StackPanel>
                    <TextBlock Text="1 - очень плохо, 5 - средне, 10 - отлично" FontSize="12" FontStyle="Italic" Foreground="#888888"/>

                    <WrapPanel x:Name="RatingButtonsPanel" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="RatingTextBox" Grid.Column="0" Style="{StaticResource RoundedTextBoxStyle}" 
                                 TextChanged="RatingTextBox_TextChanged" PreviewTextInput="RatingTextBox_PreviewTextInput"/>
                        <TextBlock Grid.Column="1" Text="/10" Style="{StaticResource TextDouwn}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </StackPanel>

                <TextBlock Text="Дополнительные заметки:" Style="{StaticResource TextDouwn}" Margin="0,0,0,5"/>

                <TextBox x:Name="NotesTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto" Style="{StaticResource RoundedTextBoxStyle}" Margin="0,0,0,15"/>

                <TextBlock x:Name="HintText" Text="Введите числовое значение" FontSize="12" Foreground="#999999" FontStyle="Italic"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
            <Button x:Name="BtnCancel" Content="Отмена" Width="100" Height="40" Style="{StaticResource BtnActive2style}" Margin="0,0,10,0" Click="BtnCancel_Click"/>

            <Button x:Name="BtnOK" Content="ОК" Width="100" Height="40" Style="{StaticResource BtnSavestyle}" IsEnabled="False" Click="BtnOK_Click" />
        </StackPanel>
    </Grid>
</Window>