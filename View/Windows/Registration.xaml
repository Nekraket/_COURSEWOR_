<Window x:Class="Курсовая.View.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая.View.Windows"
        mc:Ignorable="d"
        Title="Регистрация" Height="1080" Width="1920" MinHeight="555" MinWidth="415"
        WindowState="Maximized">
    <Grid>
        <Border Style="{StaticResource BackInterface}" Width="415" Height="555" HorizontalAlignment="Center"  VerticalAlignment="Center">
            <Grid Width="350" Height="555" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource TextUPUP}" Text="Здравствуйте!"/>

                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15">
                        <TextBlock Text="Как к вам обращаться?" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" Name="BoxUserLogin"/>

                        <TextBlock Text="Ваш email" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" Name="BoxUserEmail"/>

                        <TextBlock Text="Дата рождения" Style="{StaticResource HeaderTextStyle}"/>
                        <Expander Header="{Binding SelectedDateText}" Style="{StaticResource ExpanderStyle}" x:Name="DateExpander">
                            <StackPanel>
                                <DatePicker x:Name="BirthDatePicker" SelectedDateChanged="DatePicker_SelectedDateChanged" FirstDayOfWeek="Monday" Background="White" BorderThickness="0" Padding="10"/>
                            </StackPanel>
                        </Expander>

                        <TextBlock Text="Пол" Style="{StaticResource HeaderTextStyle}"/>
                        <Expander Header="{Binding SelectedSexText}" Style="{StaticResource ExpanderStyle}" x:Name="SexExpander">
                            <StackPanel>
                                <ListBox x:Name="SexListBox" SelectionChanged="SexListBox_SelectionChanged" MaxHeight="150" BorderThickness="0">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem" />
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Style="{StaticResource ListBoxTextBlockStyle}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Expander>
                    </StackPanel>

                    <Button Style="{StaticResource BtnActive2style}" Grid.Row="2" Content="Готово" Click="BtnReady_Click"/>

                    <TextBlock Grid.Row="3" HorizontalAlignment="Center" Margin="0,10">
                    <Run Text="Уже есть аккаунт? " Foreground="#666666"/>
                    <Hyperlink TextDecorations="None" Click="LoginHyperlink_Click">
                        <Hyperlink.Style>
                            <Style TargetType="Hyperlink" BasedOn="{StaticResource {x:Type Hyperlink}}">
                                <Setter Property="Foreground" Value="#0078d7"/>
                            </Style>
                        </Hyperlink.Style>
                        Войти
                    </Hyperlink>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
