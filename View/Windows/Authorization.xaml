<Window x:Class="Курсовая.View.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая.View.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="1080" Width="1920" MinHeight="400" MinWidth="415"
        WindowState="Maximized">
    <Grid>
        <Border Style="{StaticResource BackInterface}" Width="415" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Width="350" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource TextUPUP}" Text="С возвращением!"/>

                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,20,0,15">
                        <TextBlock Text="Логин" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" Name="BoxUserLogin"/>

                        <TextBlock Text="Email" Style="{StaticResource HeaderTextStyle}" Margin="0,13,0,8"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" Name="BoxUserEmail"/>
                    </StackPanel>

                    <Button Style="{StaticResource BtnActive2style}" Grid.Row="2" Content="Войти" Click="BtnLogin_Click"/>

                    <TextBlock Grid.Row="3" HorizontalAlignment="Center" Margin="0,10">
                        <Run Text="Нет аккаунта? " Foreground="#666666"/>
                        <Hyperlink TextDecorations="None" Click="RegisterHyperlink_Click" >
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink" BasedOn="{StaticResource {x:Type Hyperlink}}">  <!--стиль или шаблон элемента основывается на стандартном стиле для элемента Hyperlink. (чтобы цвет ссылки не подбирал цвет из реестра системы, а использовал классический синий)-->
                                    <Setter Property="Foreground" Value="#0078d7"/>
                                </Style>
                            </Hyperlink.Style>
                            Зарегистрироваться
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
