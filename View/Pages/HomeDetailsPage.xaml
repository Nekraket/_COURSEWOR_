<Page x:Class="Курсовая.View.Pages.HomeDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Курсовая.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" x:Name="MainScrollViewer">
            <StackPanel>
                <StackPanel Name="DetailsStackPanel" VerticalAlignment="Top" Margin="15">
                    <TextBlock Text="Выберите позицию для просмотра деталей" HorizontalAlignment="Center" Foreground="#666666" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>

                <Border x:Name="EditReminderPanel" Visibility="Collapsed" Background="#F5F5F5" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="15,10,15,10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Редактирование времени напоминания" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Часы:" Width="60" VerticalAlignment="Center"/>
                            <TextBox x:Name="HoursTextBox" Width="60" Margin="5,0,20,0" Text="9" PreviewTextInput="HoursTextBox_PreviewTextInput"/>

                            <TextBlock Text="Минуты:" Width="60" VerticalAlignment="Center"/>
                            <TextBox x:Name="MinutesTextBox" Width="60" Margin="5,0,0,0" Text="0" PreviewTextInput="MinutesTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Сохранить" Style="{StaticResource BtnActive2style}" Margin="0,0,10,0" Padding="10,5" Click="SaveReminderTime_Click"/>
                            <Button Content="Отмена" Style="{StaticResource BtnActive2style}" Padding="10,5" Click="CancelReminderEdit_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border x:Name="ManageStockPanel" Visibility="Collapsed" Background="#F5F5F5" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="15 10 15 10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Управление запасами" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Текущий запас:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="CurrentStockTextBox" Width="80" Margin="5,0,20,0" PreviewTextInput="StockTextBox_PreviewTextInput"/>
                            <TextBlock Text="шт." VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Минимальный запас:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="MinStockTextBox" Width="80" Margin="5,0,20,0" PreviewTextInput="StockTextBox_PreviewTextInput"/>
                            <TextBlock Text="шт." VerticalAlignment="Center"/>
                        </StackPanel>

                        <CheckBox x:Name="StockNotificationsCheckBox" Content="Уведомления о запасе" Margin="0,0,0,15" FontSize="13"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Сохранить" Style="{StaticResource BtnActive2style}" Margin="0,0,10,0" Padding="10,5" Click="SaveStockSettings_Click"/>
                            <Button Content="Отмена" Style="{StaticResource BtnActive2style}" Padding="10,5" Click="CancelStockEdit_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,20,15,0">
            <Button Name="ChangeRecipientButton" Content="Изменить получателя" Style="{StaticResource BtnActivestyle}" Margin="0,25,10,0" Width="240" Height="40" Click="ChangeRecipientButton_Click" Visibility="Collapsed"/>
            <Button Name="EditReminderButton" Content="Изменить время" Style="{StaticResource BtnActive2style}" Margin="0,25,10,0" Click="EditReminderButton_Click" Visibility="Collapsed"/>
            <Button Name="ManageStockButton" Content="Управление запасами" Style="{StaticResource BtnActive2style}" Margin="0,25,10,0" Click="ManageStockButton_Click" Visibility="Collapsed"/>
            <Button Name="DeleteReminderButton" Content="Удалить напоминание" Style="{StaticResource BtnActive2style}" Margin="0,25,10,0" Click="DeleteReminderButton_Click" Visibility="Collapsed"/>
            <Button Name="DeleteAllButton" Content="Удалить все" Style="{StaticResource BtnActive2style}" Click="DeleteAllButton_Click" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>