<UserControl x:Class="Курсовая.View.UserControls.StartNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Курсовая.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="600">
    <Border Style="{StaticResource FeatureCardStyle}" Cursor="Hand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Width="110" Height="110" Margin="0,0,20,0" Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource TextUp}" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding DescriptionText, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource TextDouwn}"/>
            </StackPanel>

            <Path Grid.Column="0" Grid.ColumnSpan="2" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Data="M12,5 L12,19 M5,12 L19,12" Stroke="#2C2C2C" StrokeThickness="2.5"/>
        </Grid>
    </Border>
</UserControl>
