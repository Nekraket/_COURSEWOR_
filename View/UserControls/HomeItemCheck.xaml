<UserControl x:Class="Курсовая.View.UserControls.HomeItemCheck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Курсовая.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="400">
    <Border x:Name="OuterBorder" Style="{StaticResource OuterCardStyle}" Cursor="Hand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="TimeTextBlock" Grid.Row="0" Text="{Binding TimeText, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource TextUp}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <Border Grid.Row="1" Style="{StaticResource InnerCardStyle}" Background="#D9D9D9" IsHitTestVisible="False" VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource IconBorderStyle}">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path x:Name="IconPath" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" Fill="Black"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="10,5">
                            <TextBlock x:Name="TitleTextBlock" Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource TextUp}" Margin="0,0,0,5"/>
                            <TextBlock x:Name="DescriptionTextBlock" Text="{Binding DescriptionText, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource TextDouwn}"/>
                        </StackPanel>

                        <Border x:Name="OwnerBadge" Grid.Column="2" Style="{StaticResource OwnerBadgeStyle}" VerticalAlignment="Center" Margin="0,0,10,0">
                            <TextBlock x:Name="OwnerTextBlock" Text="{Binding OwnerText, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <RadioButton x:Name="CompletionRadioButton" Grid.Column="1" Style="{StaticResource CompletionRadioButtonStyle}" Checked="CompletionRadioButton_Checked" Unchecked="CompletionRadioButton_Unchecked"/>
        </Grid>
    </Border>
</UserControl>
