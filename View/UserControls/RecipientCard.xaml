<UserControl x:Class="Курсовая.View.UserControls.RecipientCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Курсовая.View.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="550">
    <Grid Width="550" Margin="0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#E8E8E8" CornerRadius="12" Padding="15" Height="80" Cursor="Hand">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="White" CornerRadius="25" Width="50" Height="50" Margin="0,0,15,0">
                    <Image x:Name="RecipientAvatarImage" Width="45" Height="45" Stretch="UniformToFill">
                        <Image.Clip>
                            <EllipseGeometry RadiusX="22.5" RadiusY="22.5" Center="22.5,22.5"/>
                        </Image.Clip>
                    </Image>
                </Border>

                <TextBlock Grid.Column="1" Text="{Binding Имя}" VerticalAlignment="Center" FontSize="18" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <Button Grid.Column="1" Style="{StaticResource BtnActive3style}" Click="EditButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" ToolTip="Редактировать" Height="42" Content="✏️" FontSize="15">
        </Button>

        <Button Grid.Column="2" Style="{StaticResource BtnActive2style}" Click="DeleteButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" ToolTip="Удалить">
            <Path Data="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"
                  Fill="White" Stretch="Uniform" Width="12" Height="12"/>
        </Button>
    </Grid>
</UserControl>